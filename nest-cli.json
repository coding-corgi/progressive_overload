{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/account-service",
  "projects": {
    "account-service": {
      "type": "application",
      "root": "apps/account-service",
      "entryFile": "main",
      "sourceRoot": "apps/account-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/account-service/tsconfig.app.json",
        "webpack": true
      }
    },
    "challenge-service": {
      "type": "application",
      "root": "apps/challenge-service",
      "entryFile": "main",
      "sourceRoot": "apps/challenge-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/challenge-service/tsconfig.app.json"
      }
    }
  }
}